<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SurvivalGameApp.Main.Controls">
    <Style TargetType="{x:Type local:TimeLabel}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:TimeLabel}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <StackPanel Orientation="Vertical">
                            <TextBlock x:Name="PART_Hour" Text="{Binding Hour}" />
                            <TextBlock x:Name="PART_HourCoron" Text="{Binding HourCoron}" />
                            <TextBlock x:Name="PART_Minutes" Text="{Binding Minutes}" />
                            <TextBlock x:Name="PART_MinutesCoron" Text="{Binding MinutesCoron}" />
                            <TextBlock />
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
